<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= current_user.github_name %>
      </h1>
    </div>
  </div>


  <div class="row">

    <div class="col-md-5">
      <img class="img-responsive" src="<%= current_user.image_url %>" alt="">
    </div>

    <div class="col-md-7">

      <h3>About Me</h3>
      <% if current_user.about_me != "" %>
        <p><%= current_user.about_me %></p>
      <% else %>
        <p> You're 80% more likely to get matched if you put a little something about yourself... </p>
      <% end %>

      <h3>Preferred Languages</h3>
      <ul>
        <% current_user.languages.map do |language| %>
          <li><%= language.name %></li>
        <% end %>
      </ul>

      <h3> Stats: </h3>
      <p>Pending Match Requests: <%= current_user.pending_friends.count %></p>

      <p>Look at what a dick you are... Matches You've Rejected: <%= current_user.rejecteds.count %></p>


      <br>
      <%= link_to "Find Pairs", user_friendships_path(current_user), class: "btn btn-default" %>
    </div>

  </div>

  <div class="row">

    <div class="col-lg-12">
      <h3 class="page-header">Completed Matches: <%= current_user.friends.count %></h3>
    </div>

    <% current_user.friends.each do |friend| %>

      <div class="col-sm-2 col-xs-6">
        <!--<a class="img-responsive portfolio-item" href="#">-->
          <img class="img-responsive portfolio-item" src="<%= friend.image_url %>" alt="" >
          <%= friend.github_name %>
        <!--</a>-->
      </div>

    <% end %>
  </div>

  <br>
  <br>
