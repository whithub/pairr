    <%= f.text_area :about_me, placeholder: "Enter a short description about yourself: What are you looking for in a pair?  What are your coding interests? etc.", size: '150', class: 'about-me-text-input' %>

    <br>
    <br>

    <%= f.submit "Let's Get Pairing", class: 'btn btn-success lets-get-pairing-button' %>
  <% end %>

