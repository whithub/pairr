    <div class="col-md-12">
      <%= f.label :languages, "Please Select Your Preferred Languages. -- Check all that apply. You must select at least one." %><br>
    </div>

    <%= f.collection_check_boxes(:language_ids,
                                    Language.all.sort_by { |lang| lang.name },
                                    :id, :name, :item_wrapper_class => 'checkbox_container') %>

    <br>
    <br>

    <div class="col-md-12">
      <%= f.label :about_me, "About Me:" %>
